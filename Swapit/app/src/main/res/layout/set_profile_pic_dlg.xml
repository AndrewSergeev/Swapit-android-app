<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/take_new_profile_photo_btn"
        android:background="@drawable/material_btn_selector"
        android:text="@string/take_new_photo"
        android:textAllCaps="false"
        android:textColor="@color/textColorGray"
        android:textSize="15sp"
        android:drawableStart="@drawable/photocamera"
        android:layout_marginStart="5dp"
        android:gravity="start|center_vertical"
        android:drawablePadding="20dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="5dp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/take_profile_photo_from_galery_btn"
        android:background="@drawable/material_btn_selector"
        android:text="@string/select_from_gallery"
        android:textAllCaps="false"
        android:textColor="@color/textColorGray"
        android:textSize="15sp"
        android:drawableStart="@drawable/gallery"
        android:layout_marginStart="5dp"
        android:gravity="start|center_vertical"
        android:drawablePadding="20dp"
        />

</LinearLayout>