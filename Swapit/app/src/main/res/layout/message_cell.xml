<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_msg_layout"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background_shape"
        android:id="@+id/msg_relative"
        >

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/ad_photo_in_message_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/message_background_shape"
            app:siShape="@drawable/shape_rounded_top_rectangle"
            app:siSquare="true" />

        <TextView
            android:id="@+id/msg_txt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ad_photo_in_message_iv"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="me"/>

        <TextView
            android:id="@+id/time_msg_sent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_txt_tv"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/textColorGray"
            android:textSize="10sp"
            android:text="24/02 16:22"
            />

    </RelativeLayout>
</LinearLayout>